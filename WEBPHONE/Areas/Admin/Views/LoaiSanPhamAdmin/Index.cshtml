@model IEnumerable<ShopConnection.LoaiSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>Index cua Loai san pham</h2>
<style>
    th, td {
        text-align: center;
    }
</style>

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản lý loai san pham</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ma loai san pham</th>
                            <th>Tên loai san pham</th>
                            <th>Tình Trạng</th>
                            <th colspan="2">
                                <a href="@Url.Action("Create", "NhaSanXuatAdmin")"><img src="~/assets/images/AddNSX.png" /></a>
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaLoaiSP</td>
                            <td>@item.TenLoaiSP</td>
                            <td>@item.TinhTrang</td>
                            <th><a href="@Url.Action("Edit","LoaiSanPhamAdmin",new {id = item.MaLoaiSP})"><img src="~/assets/images/edit.png" /></a></th>
                            <th><a href="@Url.Action("Xoa tam thoi","LoaiSanPhamAdmin",new {id = item.MaLoaiSP})"><img src="~/assets/images/edit.png" /></a></th>
                            <th><a><img src="~/assets/images/Delete.png" /></a></th>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>